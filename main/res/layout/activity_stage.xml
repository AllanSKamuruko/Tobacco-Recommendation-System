<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"


xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:background="@drawable/tob"
android:layout_height="match_parent"
tools:context=".StageActivity">


<TextView
    android:id="@+id/selectstages"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="40dp"
    android:textStyle="italic"
    android:text="Click Stage"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.023" />


<Button
    android:id="@+id/buttonStage1"
    android:layout_width="400dp"
    android:layout_height="55dp"
    android:text="colouring"
    android:textSize="25dp"
    android:backgroundTint="@color/cardview_dark_background"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.287"
    tools:ignore="MissingConstraints" />

<Button
    android:id="@+id/buttonStage2"
    android:layout_width="400dp"
    android:layout_height="55dp"
    android:backgroundTint="@color/cardview_dark_background"
    android:text="LAMINA DRYING"
    android:textSize="25dp"

    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.545"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.517"
    tools:ignore="MissingConstraints" />

<Button
    android:id="@+id/buttonStage3"
    android:layout_width="400dp"
    android:layout_height="55dp"
    android:text="mid rib drying"
    android:textSize="25dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:backgroundTint="@color/cardview_dark_background"

    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.49"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.756"
    tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>